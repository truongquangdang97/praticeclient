<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>GetEmployeeController</servlet-name>
        <servlet-class>com.example.practiceclientweb.controller.GetEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetEmployeeController</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateEmployeeController</servlet-name>
        <servlet-class>com.example.practiceclientweb.controller.CreateEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateEmployeeController</servlet-name>
        <url-pattern>/employees/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateEmployeeController</servlet-name>
        <servlet-class>com.example.practiceclientweb.controller.UpdateEmployeeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateEmployeeController</servlet-name>
        <url-pattern>/employees/update</url-pattern>
    </servlet-mapping>
</web-app>